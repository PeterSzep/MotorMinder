<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AddCar"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:backgroundTint="#4a5f79"
                android:ems="10"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text=""
                android:textColor="#080808"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CarNameInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="7dp"
                android:textCursorDrawable="@drawable/custom_cursor"
                app:boxStrokeColor="@color/secondary_color"
                app:hintTextColor="@color/secondary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CarPicture">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/secondary_color"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textSize="20sp"
                    app:hintTextColor="@color/secondary_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CarBrandInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CarNameInputLayout"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="7dp"
                android:textCursorDrawable ="@drawable/custom_cursor"
                app:errorEnabled="true"
                app:expandedHintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:hintTextColor="@color/secondary_color"
                app:boxStrokeColor="@color/secondary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CarBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:maxLength="30"
                    android:inputType="text"
                    android:backgroundTint="@color/secondary_color"
                    android:textCursorDrawable ="@drawable/custom_cursor"
                    app:hintTextColor="@color/secondary_color"
                    android:hint="@string/brand" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CarModelInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CarBrandInputLayout"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                app:hintTextColor="@color/secondary_color"
                app:errorEnabled="true"
                app:expandedHintEnabled="false"
                android:textCursorDrawable ="@drawable/custom_cursor"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                android:layout_marginRight="7dp"
                app:boxStrokeColor="@color/secondary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CarModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:maxLength="30"
                    android:inputType="text"
                    android:backgroundTint="@color/secondary_color"
                    android:textCursorDrawable ="@drawable/custom_cursor"
                    app:hintTextColor="@color/secondary_color"
                    android:hint="@string/model" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Car Year -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CarYearInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CarModelInputLayout"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="7dp"
                android:textCursorDrawable ="@drawable/custom_cursor"

                app:errorEnabled="true"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/secondary_color"
                app:boxStrokeColor="@color/secondary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CarYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:maxLength="30"
                    android:inputType="number"
                    android:textCursorDrawable ="@drawable/custom_cursor"
                    app:hintTextColor="@color/secondary_color"
                    app:boxStrokeColor="@color/secondary_color"
                    android:hint="@string/year_of_manufacture" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CarOdometerInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CarYearInputLayout"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="7dp"
                app:errorEnabled="true"
                app:expandedHintEnabled="false"
                app:suffixText="km"
                android:textCursorDrawable ="@drawable/custom_cursor"
                app:hintTextColor="@color/secondary_color"
                app:boxStrokeColor="@color/secondary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CarOdometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:maxLength="30"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable ="@drawable/custom_cursor"
                    android:backgroundTint="@color/secondary_color"
                    app:hintTextColor="@color/secondary_color"
                    android:hint="@string/odometer" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/CarPicture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AddCar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/galleryButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="135dp"
                android:background="@drawable/round_corners"
                android:clickable="true"
                android:text="+"
                android:textSize="35sp"
                android:backgroundTint="@color/app_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:tint="#000000" />

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="145dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_corners"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:backgroundTint="@color/app_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/baseline_edit_24"
                app:tint = "#000000" />

            <ImageButton
                android:id="@+id/BackToHomePageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/AddCar"
                android:src="@drawable/baseline_arrow_back_ios_new_24">
            </ImageButton>

            <ImageButton
                android:id="@+id/CheckmarkButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:clickable="true"
                android:src="@drawable/baseline_check_24"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/ConsumptionText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="7dp"
                android:paddingStart="16dp"
                android:text="@string/fuel_type"
                android:textColor="#080808"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/CarOdometerInputLayout"
                tools:layout_editor_absoluteX="-20dp" />

            <Spinner
                android:id="@+id/FuelSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:text="Gasoline"
                android:backgroundTint="#4a5f79"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ConsumptionText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CarNotesInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FuelSpinner"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="7dp"
                android:textCursorDrawable ="@drawable/custom_cursor"
                app:hintTextColor="@color/secondary_color"
                app:boxStrokeColor="@color/secondary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CarNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/notes"
                    android:inputType="textMultiLine"
                    android:textSize="20sp"
                    android:textCursorDrawable ="@drawable/custom_cursor"
                    app:hintTextColor="@color/secondary_color"
                    android:backgroundTint="@color/secondary_color" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>