<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ServiceActivity">

    <TextView
        android:id="@+id/fuel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/service"
        android:gravity="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/CheckmarkButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:src="@drawable/baseline_check_24"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        tools:ignore="MissingConstraints" />


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fuel"
        android:src="@drawable/baseline_arrow_back_ios_new_24">
    </ImageButton>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/DateInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintTop_toBottomOf="@id/fuel"
        app:hintTextColor="@color/secondary_color"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        app:errorEnabled="true"
        app:boxStrokeColor="@color/secondary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color"
            android:hint="@string/date"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="20sp"
            android:inputType="none"
            android:focusable="false"
            app:hintTextColor="@color/secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/HourInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintTop_toBottomOf="@id/fuel"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:hintTextColor="@color/secondary_color"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        app:boxStrokeColor="@color/secondary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color"
            android:hint="@string/hour"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="20sp"
            android:inputType="none"
            android:focusable="false"
            app:hintTextColor="@color/secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LocationInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DateInputLayout"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:hintTextColor="@color/secondary_color"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:errorEnabled="true"
        app:expandedHintEnabled="false"
        app:boxStrokeColor="@color/secondary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color"
            android:hint="@string/location"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="20sp"
            android:inputType="textAutoComplete"
            app:hintTextColor="@color/secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/CostInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serviceTypeSpinner"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:hintTextColor="@color/secondary_color"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:suffixText="â‚¬"
        app:errorEnabled="true"
        app:expandedHintEnabled="false"
        app:boxStrokeColor="@color/secondary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color"
            android:hint="@string/location"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="20sp"
            android:inputType="numberDecimal"
            app:hintTextColor="@color/secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/serviceTypeSpinner"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LocationInputLayout"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="visible"
        android:backgroundTint="@color/secondary_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>