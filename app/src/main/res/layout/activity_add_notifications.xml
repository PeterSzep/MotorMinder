<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddNotificationsActivity">

    <TextView
        android:id="@+id/fuel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/notification"
        android:gravity="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/CheckmarkButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:src="@drawable/baseline_check_24"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        tools:ignore="MissingConstraints" />


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fuel"
        android:src="@drawable/baseline_arrow_back_ios_new_24">
    </ImageButton>


    <Spinner
        android:id="@+id/serviceTypeSpinner"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fuel"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="visible"
        android:backgroundTint="@color/secondary_color"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descriptionInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serviceTypeSpinner"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:hintTextColor="@color/secondary_color"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:errorEnabled="true"
        app:expandedHintEnabled="false"
        app:boxStrokeColor="@color/secondary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color"
            android:hint="@string/description"
            app:layout_constraintTop_toBottomOf="@id/fuel"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="20sp"
            android:inputType="textAutoComplete"
            app:hintTextColor="@color/secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LocationInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionInputLayout"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:hintTextColor="@color/secondary_color"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:errorEnabled="true"
        app:expandedHintEnabled="false"
        app:boxStrokeColor="@color/secondary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color"
            android:hint="@string/location"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="20sp"
            android:inputType="textAutoComplete"
            app:hintTextColor="@color/secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>


    <Switch
        android:id="@+id/recurringSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/LocationInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/reccuring_notifcation"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:thumbTextPadding="12dp"
        android:textSize="16sp"
        android:layout_marginRight="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/deadlineInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recurringSwitch"
        app:hintTextColor="@color/secondary_color"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:errorEnabled="true"
        app:boxStrokeColor="@color/secondary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color"
            android:hint="@string/deadline"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="20sp"
            android:inputType="none"
            android:focusable="false"
            app:hintTextColor="@color/secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>